@using InnoGotchiGameFrontEnd.BLL.Model.Authorize;
@using InnoGotchiGameFrontEnd.Web.Helpers;

@inject AuthorizeModel authModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InnoGotchiGameFrontEnd.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

    <link rel="stylesheet" href="~/css/PopUp.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/InnoGotchiGameFrontEnd.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="User" asp-action="Index">Innogotchi Game</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (!authModel.IsAuthorized)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Register">Зарегистрироватся</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="LogIn">Войти</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Users">Найти друга</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark position-relative" asp-area="" asp-controller="ColaborationRequest" asp-action="UnconfirmedRequestsView">
                                    Почта
                                    @if (authModel.User.UnconfirmedRequest.Count() != 0)
                                    {
                                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                            @if (authModel.User.UnconfirmedRequest.Count() > 99)
                                            {
                                                <span>99+</span>
                                            }
                                            else
                                            {
                                                @authModel.User.UnconfirmedRequest.Count()
                                            }
                                            <span class="visually-hidden">непрочитанные сообщения</span>
                                        </span>
                                    }
                                </a>
                            </li>
                        }
                    </ul>
                    @if (authModel.IsAuthorized)
                    {
                        
                        <div class="d-flex align-items-center justify-content-end">
                            <a class="nav-link text-dark text-center" asp-area="" asp-controller="User" asp-action="LogOut">Выйти</a>
                            @if (@authModel.User.Picture != null)
                            {
                                <a class="" asp-area="" asp-controller="User" asp-action="Index">
                                    @Html.ImageFromByteArray(@authModel.User.Picture.Image, 150, 150, "nav-link img-thumbnail rounded float-right")
                                </a>
                            }
                            else
                            {
                                <a class="nav-link text-dark" asp-area="" asp-controller="Гыук" asp-action="Index">@authModel.User.FirstName @authModel.User.LastName</a>
                            }
                        </div>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - InnoGotchiGameFrontEnd.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
