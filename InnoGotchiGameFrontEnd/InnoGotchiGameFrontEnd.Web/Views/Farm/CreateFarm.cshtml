

@model int

<form method="post" class="form">
    <div class="form-group">
        <input hidden name="OwnerId" type="number" value="@Model" class="form-control bg-black bg-opacity-25" required />
    </div>
    <div class="form-group">
        <label class="form-label">Name</label>
        <input name="Name" type="text" class="form-control bg-black bg-opacity-25" required />
    </div>
    <input type="submit" />
</form>