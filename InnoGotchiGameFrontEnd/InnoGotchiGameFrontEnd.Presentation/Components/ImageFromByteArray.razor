
<img src="data:image/{@ImageType};base64, @Convert.ToBase64String(Image)" height="@Height" width="@Width" 
class="@imgClass"/>

@code {
    [Parameter] public byte[] Image { get; set; }
    [Parameter] public string ImageType { get; set; } = "png";
    [Parameter] public int Height { get; set; } = 100;
    [Parameter] public int Width { get; set; } = 100;
    [Parameter] public string imgClass { get; set; } = "";
}
